{
  "[python]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll": "always"
    },
  },
  //"python.languageServer": "Default", // None to use basedpyright over pylance
  "python.languageServer": "None", // None to use basedpyright over pylance
  "python.analysis.typeCheckingMode": "off",
  "python.autoComplete.extraPaths": [
    "${workspaceFolder}/src",
    "${workspaceFolder}/.venv/Lib/site-packages"
  ],
  "python.analysis.extraPaths": [
    "${workspaceFolder}/src",
    "${workspaceFolder}/.venv/Lib/site-packages"
  ],
  "python.analysis.indexing": true,
  "basedpyright.analysis.diagnosticMode": "workspace",
  "basedpyright.disableLanguageServices": false,
  "basedpyright.trace.server": "verbose",
  "basedpyright.analysis.logLevel": "Trace",
  "python.pyrefly.displayTypeErrors": "force-on"
}
