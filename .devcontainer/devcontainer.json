{
    "name": "Typhon Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "postCreateCommand": "uv sync && uv run -m  script.build",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.debugpy",
                "ms-python.vscode-python-envs",
                "detachhead.basedpyright",
                "meta.pyrefly",
                "charliermarsh.ruff",
                "gruntfuggly.todo-tree",
                "eamodio.gitlens",
                "oderwat.indent-rainbow",
                "hnakamura5.typhon-language-support"
            ],
            "settings": {
                "typhon.path": "/workspaces/Typhon/.venv/bin/typhon",
                "typhon.args": [
                    "lsp"
                ],
                "chat.tools.autoApprove": true,
                "chat.tools.terminal.autoApprove": true,
                "chat.agent.maxRequests": 100
            }
        }
    }
}
